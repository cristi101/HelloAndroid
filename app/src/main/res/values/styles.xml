<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="background">
        <item name="android:background">@color/bkgd_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="message">
        <item name="android:background">@color/bkgd_msg_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/txt_margin</item>
        <item name="android:textSize">@dimen/msg_size</item>
        <item name="android:textColor">@color/msg_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>
        <item name="android:text">@string/app_text</item>
    </style>

    <style name="animal">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/bunny</item>
    </style>

    <style name="logo">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/txt_margin</item>
        <item name="android:layout_marginBottom">@dimen/txt_margin</item>
        <item name="android:layout_marginLeft">@dimen/logo_margin</item>
        <item name="android:layout_marginRight">@dimen/logo_margin</item>
    </style>
</resources>
